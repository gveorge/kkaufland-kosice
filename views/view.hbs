<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/view/{{table}}">{{page_name}}</a></li>
    <li class="breadcrumb-item text-capitalized active" aria-current="page">View {{table}}</li>
  </ol>
</nav>

<div class="view-user p-5">
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            {{#columns}}
            <th scope="col">{{name}}</th>
            {{/columns}}
          </tr>
        </thead>
        <tbody>
          <tr>
            {{#columns}}
            <td>
                {{#if (lookup ../data [col_name])}}
                {{lookup ../data [col_name]}}
                {{else}}
                --
                {{/if}}
            </td>
            {{/columns}}
          </tr>
        </tbody>
      </table>
    </div>
    {{#extras}}
    <div class="row">
      <div class="col">
        <b>{{name}}</b>
      </div>
    </div>
    <div class="row">
      <div class="col">
        {{lookup ../data col_name}}
      </div>
    </div>
    {{/extras}}
  </div>
</div>